{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "C:\\cygwin64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/srcs/*.cpp",
                "-o",
                "${workspaceFolder}/bin/Release/MemSubLoader.exe",
                "-I${workspaceFolder}/includes",
                "-lstdc++",
                "-lcomdlg32",
				"-lcomctl32",
                "-lshlwapi",
                "-lgdi32"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiles with g++ every .cpp file inside 'srcs' and link every file inside 'includes'"
        }
    ],
    "version": "2.0.0"
}
